{
  "compilerOptions": {
    "target": "es2017",          // أو es2020
    "module": "esnext",
    "lib": ["es2018", "dom"],    // مهم لإصلاح أغلب أخطاء "Cannot find name"
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  }
}
